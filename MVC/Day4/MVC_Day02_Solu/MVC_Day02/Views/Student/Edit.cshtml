@model StudentWithDeptListViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<form method="post" action="/Student/SaveEdit/@Model.Id" >
    <div class="mt-4">
        <label><b>Name</b></label>
        <input type="text" id="Name" name="Name" value="@Model.Name" class="form form-control" />
    </div>
    <div class="mt-4">
        <label><b>Age</b></label>
        <input type="text" id="Age" name="Age" value="@Model.Age" class="form form-control" />
    </div>
    <div class="mt-4">
        <label><b>Department</b></label>
        @* <input type="text" id="DepartmentId" name="DepartmentId" value="@Model.DepartmentId" class="form form-control" /> *@
        <select id="DepartmentId" name="DepartmentId" class="form form-control">
            @foreach(var deptitem in Model.DeptList)
            {
                if (Model.DepartmentId == deptitem.Id)
                {
                    <option value="@deptitem.Id" selected>@deptitem.Name</option>
                }
                else
                {
                    <option value="@deptitem.Id">@deptitem.Name</option>
                }

            }
        </select>
    </div>
    
    <input type="submit" value="Save" class="btn btn-success mt-4" />
</form>
<a href="/Student/GetALL" class="btn btn-dark mt-4">Back</a>

