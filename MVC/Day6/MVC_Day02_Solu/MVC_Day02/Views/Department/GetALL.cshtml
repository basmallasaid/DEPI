@using MVC_Day02.Models.LMS_System
@model List<Department>
@{
    ViewData["Title"] = "Department Data";
    Layout = "_OurLayout";
}

<a href="/Department/Add" class="btn btn-dark mb-4">New</a>
<br />
<table class="table table-bordered ">
    <tr class="bg-dark text-light">
        <th>Id</th>
        <th>Name</th>
        <th>MgrName</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    @foreach (var item in Model){
    <tr>
        
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.MgrName</td>
            <td>
                <a href="/Department/Edit/@item.Id" class="btn" style="cursor: pointer;"><img src="/image/edit.png" /></a>
            </td>
            <td>
                <form asp-controller="Department" asp-action="Delete" asp-route-id="@item.Id" 
                      onsubmit="return confirm('Are you sure about the deletion?');" style="display:inline;">
                    <button type="submit" class="btn" style="border: none; background: none; padding: 0; cursor: pointer;">
                        <img src="/image/delete.png" />
                    </button>
                </form>
            </td>
            
        
    </tr>
    }
</table>
