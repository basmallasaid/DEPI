@using MVC_Day02.Models.LMS_System
@model DeptWithExtraInfoViewModel
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<div class="card" style="width: 18rem;">
    <div class="card-body">
        <h5 class="card-title">Dept Name:@Model.DeptName</h5>
        <h5 class="card-subtitle mb-2 text-body-secondary">Dept State: @Model.DeptState</h5>
    </div>
</div>
<br />
<h3>Students Over 25 Years:</h3>
<select class="form-control">
    @foreach (var student in Model.StudentName)
    {
        <option>@student</option>
    }
</select>


